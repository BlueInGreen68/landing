block const
   - const cssPathStyles = "./style.css"

block variables
   - var titlePage = 'Repair Design Project'

block template
   doctype html
   html(lang="en" class="page")
      head
         meta(charset="UTF-8")
         meta(name="viewport", content="width=device-width, initial-scale=1.0")
         title= titlePage
         link(rel="stylesheet" href= cssPathStyles)

      body.page__body

         include ../../includes/header.pug

         block main

         include ../../includes/header.pug